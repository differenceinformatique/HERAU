	<record id="view_origine_tree" model="ir.ui.view">
		<field name="name">di.origine.tree</field>
		<field name="model">di.origine</field>
		<field name="arch" type="xml">
			<tree string="Origine" default_order="name">
				<field name="name" />
				<field name="di_des" />
			</tree>
		</field>
	</record>
	<record id="view_origine_form" model="ir.ui.view">
		<field name="name">di.origine.form</field>
		<field name="model">di.origine</field>
		<field name="arch" type="xml">
			<form string="Origine">
				<sheet string="Origine" modifiers="{}">
					<group>
						<field name="di_company_id" can_create="true" can_write="true"
							modifiers="{'readonly':true}" />
						<field name="name" modifiers="{'required':true}" />
						<field name="di_des" modifiers="{'required':true}" />
					</group>
				</sheet>
			</form>
		</field>
	</record>
	<record id="di_action_origine" model="ir.actions.act_window">
		<field name="name">Origines</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">di.origine</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
			<p class="oe_view_nocontent_create">
				Aide
			</p>
			<p>
				Cliquer pour gérer les origines
			</p>
		</field>
	</record>
