    <!--Paramétrage -->
    <record id="view_param_tree" model="ir.ui.view">
        <field name="name">di.param.tree</field>
        <field name="model">di.param</field>
        <field name="arch" type="xml">
            <tree string="Paramètres" default_order="di_company_id">
                <field name="di_company_id" readonly="1" />
                <!--<field name="di_horizon" />
                <field name="di_printer_id" />
                <field name="di_label_id" />
                <field name="di_printer_ach_id" />
                <field name="di_label_ach_id" />  -->
            </tree>
        </field>
    </record>
    <record id="view_param_form" model="ir.ui.view">
        <field name="name">di.param.form</field>
        <field name="model">di.param</field>
        <field name="arch" type="xml">
            <form string="Paramètres">
                <sheet string="Paramètres" modifiers="{}">
                    <group>
                            <group string="Généralités"> 
                                <field name="di_company_id" can_create="true" can_write="true"
                                    readonly="1" />
                                <field name="di_horizon" />                     
                                <field name="di_seuil_marge_prc" />  
                                <field name="di_prc_com_avec_court" />
                                <field name="di_prc_com_sans_court" />
                                <field name="di_art_com" />                            
                            </group>
                                
                            <group string="Impressions">  
                                <field name="di_printer_id" />
                                <field name="di_label_id" /> 
                                <field name="di_printer_ach_id" />
                                <field name="di_label_ach_id" />
                            </group>    
                            <group string="Comptabilité">
                                <field name="di_compta_prg" />
                                <field name="di_dos_divalto" />
                                <field name="di_etb_divalto" />                            
                                <field name="di_nom_exp_ecr_compta" />
                            </group>                                             
                        </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="di_action_param" model="ir.actions.act_window">
        <field name="name">Paramètres</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">di.param</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Paramétrage
            </p>
            <p>
                Cliquer pour gérer les paramètres
            </p>
        </field>
    </record>
