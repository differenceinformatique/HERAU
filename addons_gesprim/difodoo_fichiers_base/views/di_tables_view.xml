                        <field name="di_un_prix" modifiers="{'required':true}"/>
                        <field name="di_qte_seuil" />
                        <field name="di_date_effet" modifiers="{'required':true}"/>
                        <field name="di_date_fin" />
                        <field name="di_prix" />                                            
                        
                    </group>
                </sheet>
            </form>
        </field>
