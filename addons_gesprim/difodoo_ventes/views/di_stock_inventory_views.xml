<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    <!-- Vue form des inventaires avec la liste des articles -->
        <record id="di_stock_inventory_form" model="ir.ui.view">
            <field name="name">di.stock.inventory.form</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock.view_inventory_form"/>
            <field eval="99" name="priority"/>
            <field name="arch" type="xml">
                <xpath expr="//page/field[@name='line_ids']/tree" position="attributes">                                  
                    <attribute name="decoration-danger">di_ecart_qte &lt; 0</attribute>
                    <attribute name="decoration-success">di_ecart_qte &gt; 0</attribute>
                    <attribute name="decoration-info">1 &lt; 0</attribute>                          
                </xpath>              
                <xpath expr="//page/field[@name='line_ids']/tree/field[@name='theoretical_qty']" position="after">
                    <field name="di_poin_theo" readonly="1"/>
                    <field name="di_nb_pieces_theo" readonly="1"/>
                    <field name="di_nb_colis_theo" readonly="1"/>
                    <field name="di_nb_palette_theo" readonly="1"/>                    
                </xpath> 
                <xpath expr="//page/field[@name='line_ids']/tree/field[@name='product_qty']" position="after">
                    <field name="di_poin" />
                    <field name="di_nb_pieces" />
                    <field name="di_nb_colis" />
                    <field name="di_nb_palette" />
                    <field name="di_ecart_qte" string="Ecart unitÃ© de stock" readonly="1"/>                      
                </xpath>                    
                <!-- <xpath expr="//div[@class='oe_chatter']" position="replace"/>   -->                
            </field>                                    
		</record>
		<!-- Vue liste des inventaires -->
		<record id="di_stock_view_inventory_tree" model="ir.ui.view">
            <field name="name">di.stock.view.inventory.tree</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock.view_inventory_tree"/>
            <field eval="99" name="priority"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='state']" position="after">                                  
                    <field name="di_type_inv" readonly="1"/>                                        
                </xpath>                                      
            </field>                                    
        </record>
        
        <!-- Search view inventaire -->
        <record id="di_stock_view_inventory_filter" model="ir.ui.view">
            <field name="name">di.stock.view.inventory.filter</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock.view_inventory_filter"/>
            <field eval="99" name="priority"/>
            <field name="arch" type="xml">
                
                <xpath expr="//search/field[@name='product_id']" position="after">  
                    <field name="di_type_inv"/>        
                    <filter string="Standard" name="std"
                        domain="[('di_type_inv', '=', 'std')]" />
                    <filter string="Retour consigne" name="retcons"
                        domain="[('di_type_inv', '=', 'retcons')]" />
                    <filter string="Apport producteur" name="appprod"
                        domain="[('di_type_inv', '=', 'appprod')]" />                                                                 
                </xpath>                                      
            </field>                                    
        </record>
        
		<!-- visualisation des stocks -->     
		<record id="di_view_stock_quant_tree" model="ir.ui.view">
			<field name="name">di.stock.quant.tree</field>
			<field name="model">stock.quant</field>
			<field name="inherit_id" ref="stock.view_stock_quant_tree" />
			<field eval="99" name="priority" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='product_uom_id']" position="after">
					<field name="di_nb_pieces"/>
					<field name="di_nb_colis"/>
					<field name="di_poin"/>
					<field name="di_cmp" widget="monetary"/>
					<field name="di_valstock" widget="monetary"/>
					<field name="currency_id" invisible="1"/>
				</xpath>
			</field>
		</record>       
		
		 <!-- Actions  -->
        <record id="di_action_inventory_form_std" model="ir.actions.act_window">
            <field name="name">Resserre</field>
            <field name="res_model">stock.inventory</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" ref="stock.view_inventory_tree"/>
            <field name="domain"/>
            <field name="context">{                
                'search_default_di_type_inv': 'std'                
                }
            </field>
           <field name="search_view_id" ref="stock.view_inventory_filter"/>          
        </record> 
        <record id="di_action_inventory_form_appprod" model="ir.actions.act_window">
            <field name="name">Apport prod.</field>
            <field name="res_model">stock.inventory</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" ref="stock.view_inventory_tree"/>
            <field name="domain"/>
            <field name="context">{                
                'search_default_di_type_inv': 'appprod'                
                }
            </field>
           <field name="search_view_id" ref="stock.view_inventory_filter"/>          
        </record>   
        <record id="di_action_inventory_form_retcons" model="ir.actions.act_window">
            <field name="name">Retour consigne</field>
            <field name="res_model">stock.inventory</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" ref="stock.view_inventory_tree"/>
            <field name="domain"/>
            <field name="context">{                
                'search_default_di_type_inv': 'retcons'                
                }
            </field>
           <field name="search_view_id" ref="stock.view_inventory_filter"/>          
        </record>               
    </data>
</odoo>
   