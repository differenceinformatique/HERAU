<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="di_account_invoice_form" model="ir.ui.view">
            <field name="name">di.account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field eval="99" name="priority"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']" position="attributes">
                    <attribute name="mode">'tree,kanban,form'</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree" position="before">
                    <form string="Lignes de facture">
                        <group>
                            <group>
                                <field invisible="1" name="sequence" widget="handle"/>
                                <field domain="[('sale_ok','=',True)]" name="product_id"/>
                                <field invisible="1" name="origin"/>
                                <field invisible="1" name="is_rounding_line"/>
                                <field name="name"/>
                                <field invisible="1" name="company_id"/>
                                <field
                                    attrs="{'readonly': [('di_spe_saisissable', '=', False)]}"
                                    name="di_qte_un_saisie" string="Qté unité saisie"/>
                                <field
                                    attrs="{'readonly': [('di_spe_saisissable', '=', False)],'required':[('di_spe_saisissable','=',True)]}"
                                    name="di_un_saisie" string="Unité saisie"/>
                                <field name="quantity"/>
                                <field groups="product.group_uom" name="uom_id"/>
                                <field name="price_unit"/>
                                <field
                                    attrs="{'readonly': [('di_spe_saisissable', '=', False)],'required':[('di_spe_saisissable','=',True)]}"
                                    name="di_un_prix" string="Unité de prix"/>
                                <field groups="base.group_no_one" name="discount"/>
                            </group>
                            <group>
                                <field name="di_nb_pieces" readonly="1" string="Nb pièces"/>
                                <field name="di_nb_colis" readonly="1" string="Nb colis"/>
                                <field
                                    attrs="{'invisible': [('product_id', '=', False)],'required':[('di_un_saisie','=','COLIS')],'readonly': [('di_spe_saisissable', '=', False)]}"
                                    context="{'default_product_id': product_id, 'tree_view_ref':'product.product_packaging_tree_view', 'form_view_ref':'product.product_packaging_form_view'}"
                                    domain="[('product_id','=',product_id),('di_type_cond','=','COLIS')]"
                                    groups="product.group_stock_packaging"
                                    name="di_product_packaging_id" string="Colis"/>
                                <field name="di_nb_palette" readonly="1" string="Nb palettes"/>
                                <field
                                    attrs="{'invisible': [('product_id', '=', False)],'required':[('di_un_saisie','=','PALETTE')],'readonly': [('di_spe_saisissable', '=', False)]}"
                                    context="{'default_product_id': product_id, 'tree_view_ref':'product.product_packaging_tree_view', 'form_view_ref':'product.product_packaging_form_view'}"
                                    domain="[('product_id','=',product_id),('di_type_cond','=','PALETTE')]"
                                    groups="product.group_stock_packaging" name="di_type_palette_id"/>
                                <field name="di_poin" readonly="1" string="Poids net"/>
                                <field
                                    attrs="{'readonly': [('di_spe_saisissable', '=', False)]}"
                                    name="di_tare" string="Tare"/>
                                <field
                                    attrs="{'readonly': [('di_spe_saisissable', '=', False)]}"
                                    name="di_poib" string="Poids brut"/>
                                <field context="{'type':parent.type}"
                                    domain="[('type_tax_use','=','sale'),('company_id', '=', parent.company_id)]"
                                    name="invoice_line_tax_ids"
                                    options="{'no_create': True}" widget="many2many_tags"/>
                                <field
                                    domain="[('company_id', '=', parent.company_id), ('internal_type', '=', 'other'), ('deprecated', '=', False)]"
                                    groups="account.group_account_user" name="account_id"/>
                                <field
                                    context="{'default_partner_id': parent.partner_id}"
                                    domain="[('company_id', '=', parent.company_id)]"
                                    groups="analytic.group_analytic_accounting" name="account_analytic_id"/>
                                <field
                                    groups="analytic.group_analytic_accounting"
                                    name="analytic_tag_ids"
                                    options="{'color_field': 'color'}" widget="many2many_tags"/>
                                <field invisible="1" name="currency_id"/>
                                <field invisible="1" name="di_spe_saisissable"/>
                                <field invisible="1" name="di_flg_modif_uom"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="di_categorie_id" readonly="1"/>
                                <field name="di_origine_id" readonly="1"/>
                                <field name="di_marque_id" readonly="1"/>
                                <field name="di_calibre_id" readonly="1"/>
                                <field name="di_station_id" readonly="1"/>
                            </group>
                            <group>
                                <field
                                    context="{'search_default_supplier':1, 'default_supplier':1, 'default_customer':0,'default_di_is_court':1,'search_default_di_is_court':1}"
                                    domain="[('supplier','=',True),('di_is_court','=',True)]" name="di_courtier_id"/>
                                <field force_save="1"
                                    name="di_prc_com_court" readonly="1"/>
                                <field force_save="1"
                                    name="di_prc_com_OP" readonly="1"/>
                            </group>
                        </group>
                    </form>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree" position="attributes">
                    <attribute name="editable"/>
                </xpath>
                <!-- <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="replace">
                </xpath>   -->
                <xpath
                    expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath
                    expr="//field[@name='invoice_line_ids']/tree/field[@name='account_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath
                    expr="//field[@name='invoice_line_ids']/tree/field[@name='quantity']" position="before">
                    <field invisible="1" name="di_spe_saisissable"/>
                    <field invisible="1" name="di_flg_modif_uom"/>
                    <field
                        attrs="{'readonly': [('di_spe_saisissable', '=', False)]}"
                        name="di_qte_un_saisie" string="Qté unité saisie"/>
                    <field
                        attrs="{'readonly': [('di_spe_saisissable', '=', False)],'required':[('di_spe_saisissable','=',True)]}"
                        name="di_un_saisie" string="Unité saisie"/>
                    <field name="di_nb_pieces" readonly="1" string="Nb pièces"/>
                    <field name="di_nb_colis" readonly="1" string="Nb colis"/>
                    <field
                        attrs="{'invisible': [('product_id', '=', False)],'required':[('di_un_saisie','=','COLIS')],'readonly': [('di_spe_saisissable', '=', False)]}"
                        context="{'default_product_id': product_id, 'tree_view_ref':'product.product_packaging_tree_view', 'form_view_ref':'product.product_packaging_form_view'}"
                        domain="[('product_id','=',product_id),('di_type_cond','=','COLIS')]"
                        groups="product.group_stock_packaging"
                        name="di_product_packaging_id" string="Colis"/>
                    <field name="di_nb_palette" readonly="1" string="Nb palettes"/>
                    <field
                        attrs="{'invisible': [('product_id', '=', False)],'required':[('di_un_saisie','=','PALETTE')],'readonly': [('di_spe_saisissable', '=', False)]}"
                        context="{'default_product_id': product_id, 'tree_view_ref':'product.product_packaging_tree_view', 'form_view_ref':'product.product_packaging_form_view'}"
                        domain="[('product_id','=',product_id),('di_type_cond','=','PALETTE')]"
                        groups="product.group_stock_packaging" name="di_type_palette_id"/>
                    <field name="di_poin" readonly="1" string="Poids net"/>
                    <field
                        attrs="{'readonly': [('di_spe_saisissable', '=', False)]}"
                        name="di_tare" string="Tare"/>
                    <field
                        attrs="{'readonly': [('di_spe_saisissable', '=', False)]}"
                        name="di_poib" string="Poids brut"/>
                </xpath>
                <xpath
                    expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="after">
                    <field
                        attrs="{'readonly': [('di_spe_saisissable', '=', False)],'required':[('di_spe_saisissable','=',True)]}"
                        name="di_un_prix" string="Unité de prix"/>
                </xpath>
                <xpath expr="//div[@class='oe_chatter']" position="replace"/>
            </field>
        </record>
